<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3_trangchu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnClick_Home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Hà Giang"
            android:textColor="@color/red"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/bg_in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Là một tỉnh thuộc khu vực biên giới, Hà Giang nằm ở vùng cực Bắc xa xôi của Tổ quốc. Đến thăm tỉnh này là du hành ngược thời gian và bắt gặp một số danh lam thắng cảnh hùng vĩ và hiểm trở nhất của Việt Nam. Hà Giang được trải nghiệm tốt nhất là một chuyến đi trên hai bánh, hòa mình vào vẻ hùng vĩ của cảnh quan và bầu không khí của các thị trấn xa xôi và các bản làng dân tộc thiểu số."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoạt động giải trí hàng đầu ở Hà Giang:"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đèo Mã Pí Lèng"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tham quan Dinh Sà Phìn H'Mông"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời tiết Hà Giang"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Từ tháng 9 đến tháng 11 là thời điểm thích hợp để đến thăm tỉnh xa xôi này, với nhiệt độ mát mẻ hơn. Vào tháng 11, Hà Giang cực kỳ nổi tiếng trong Lễ hội hoa kiều mạch. Tháng 4 đến tháng 6 thời tiết dễ chịu và ấm áp, tháng 7 và tháng 8 có thể rất nóng với các đợt gió mùa thường xuyên."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vận tải hà giang"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Thành phố Hà Giang nhỏ bé là cửa ngõ của tỉnh, cách Hà Nội khoảng 300km. Các chuyến xe buýt chạy cả ngày lẫn đêm từ thủ đô, từ giường ngủ đến xe tải nhỏ VIP nhỏ hơn. Tùy thuộc vào phương tiện và tài xế, hành trình đến đó mất khoảng sáu giờ. Giao thông công cộng xung quanh tỉnh Hà Giang còn hạn chế. Những người lái xe có kinh nghiệm có thể thuê một chiếc xe máy trong thị trấn. Một lựa chọn khác là đặt tour đi xe máy hoặc ô tô riêng."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:background="@drawable/button_color"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</RelativeLayout>
</ScrollView>